<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee" 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
	version="3.1">
	
	<display-name>Project JSP Application</display-name>

	<servlet>
		<servlet-name>LoginController</servlet-name>
		<servlet-class>org.project.controller.LoginController</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>LoginController</servlet-name>
		<url-pattern>/LoginController</url-pattern>
	</servlet-mapping>

	<welcome-file-list>
   		<welcome-file>index.jsp</welcome-file>
  	</welcome-file-list>


	<servlet>
		<servlet-name>RegisterController</servlet-name>
		<servlet-class>org.project.controller.RegisterController</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>

	<servlet-mapping>
		<servlet-name>RegisterController</servlet-name>
		<url-pattern>/RegisterController</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>PlainOfStudyController</servlet-name>
		<servlet-class>org.project.controller.PlainOfStudyController</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>PlainOfStudyController</servlet-name>
		<url-pattern>/PlainOfStudyController</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>ExamController</servlet-name>
		<servlet-class>org.project.controller.ExamController</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>

	<servlet-mapping>
		<servlet-name>ExamController</servlet-name>
		<url-pattern>/ExamController</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>UniversityBookletController</servlet-name>
		<servlet-class>org.project.controller.UniversityBookletController</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>

	<servlet-mapping>
		<servlet-name>UniversityBookletController</servlet-name>
		<url-pattern>/UniversityBookletController</url-pattern>
	</servlet-mapping>

</web-app>